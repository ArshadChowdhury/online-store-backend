{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2020",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,              
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./src"                          
  },
  "include": ["src/**/*"]
}
